<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text ="@string/sign_up"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="68dp"
        android:layout_height="84dp"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_toEndOf="@id/signup"
        android:layout_toRightOf="@id/signup"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@id/signup"
        android:layout_toLeftOf="@id/signup"
        android:onClick="goBack"
        android:text="@string/back" />

    <EditText
        android:layout_below="@id/signup"
        android:id="@+id/first"
        android:hint = "@string/first_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="First Name"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_below="@id/first"
        android:id="@+id/last"
        android:hint = "@string/last_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="Last Name"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_below="@id/last"
        android:id="@+id/address"
        android:hint = "@string/address"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="Address"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_below="@id/address"
        android:id="@+id/username"
        android:hint = "@string/username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="Create Username"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/password"
        android:layout_below="@id/username"
        android:hint="@string/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:autofillHints="Create Password"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_id"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/createAccount"
        android:layout_height="75dp"
        android:layout_width="200dp"
        android:onClick = "goToHomePage"/>
</RelativeLayout>