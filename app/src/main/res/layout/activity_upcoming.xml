
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpcomingActivity"
    android:id="@+id/myLayout">

    <TextView
        android:id="@+id/yourBookings"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/yourBookings"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@id/yourBookings"
        android:layout_toLeftOf="@id/yourBookings"
        android:onClick="goBack"
        android:text="@string/back" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="68dp"
        android:layout_height="84dp"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_toEndOf="@id/yourBookings"
        android:layout_toRightOf="@id/yourBookings"
        android:src="@drawable/logo" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourBookings">
    </ListView>

</RelativeLayout>

